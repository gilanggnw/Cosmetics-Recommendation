{
    "version": 2,
    "builds": [
      {
        "src": "flask_backend/api/app.py",
        "use": "@vercel/python",
        "config": { 
          "maxLambdaSize": "15mb",
          "runtime": "python3.9",
          "includeFiles": [
            "flask_backend/cosmetic_p.csv",
            "flask_backend/.env"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "flask_backend/api/app.py"
      }
    ],
    "env": {
      "FLASK_ENV": "production",
      "FLASK_APP": "flask_backend/api/app.py"
    }
}